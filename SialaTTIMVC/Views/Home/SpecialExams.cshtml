@{
    Layout = "./_DashboardLayout.cshtml";
    ViewBag.Title = "Special Exams";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Horizontal Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-5 control-label">Academic Year:</label>
                                <div class="col-sm-7">
                                    <asp:DropDownList ID="ddlAYear" CssClass="form-control" runat="server" OnSelectedIndexChanged="ddlAYear_SelectedIndexChanged" AutoPostBack="true"></asp:DropDownList>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-4 control-label">Semester:</label>
                                <div class="col-sm-8">
                                    <asp:DropDownList ID="ddlSem" CssClass="form-control" runat="server" OnSelectedIndexChanged="ddlSem_SelectedIndexChanged" AutoPostBack="true"></asp:DropDownList>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-4 control-label">Stage:</label>
                                <div class="col-sm-8">
                                    <asp:DropDownList ID="ddlStage" CssClass="form-control" runat="server" OnSelectedIndexChanged="ddlStage_SelectedIndexChanged" AutoPostBack="true"></asp:DropDownList>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-info pull-right">Sign in</button>
                    </div>
                    <!-- /.box-footer -->
                </div>
            </div>
            <!-- /.box -->
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">General Elements</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div role="form">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Units</label>
                            <asp:CheckBoxList ID="cblUnits" runat="server" Width="100%" RepeatColumns="4" ForeColor="Blue" RepeatDirection="Horizontal">
                            </asp:CheckBoxList>
                        </div>
                    </div>
                    <asp:Label ID="lblError" runat="server" ForeColor="Red" Width="100%" Font-Size="10pt"></asp:Label>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>