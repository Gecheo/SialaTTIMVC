                </ul>
            </section>
        </aside>
    </section>

    <!-- Ensure you include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle the visibility of the treeview menu on click
            $('.treeview > a').on('click', function (e) {
                e.preventDefault(); // Prevent the default link behavior

                // Toggle the visibility of the next treeview-menu
                var $this = $(this);
                var $treeviewMenu = $this.next('.treeview-menu');

                // Slide up any open menus except the one being clicked
                $('.treeview-menu').not($treeviewMenu).slideUp();

                // Slide toggle the clicked menu
                $treeviewMenu.slideToggle();
            });
        });
    </script>
</body>
</html>
