@model SialaTTIMVC.Models.LoginModel
@{
   
    ViewBag.Title = "Siala Login";
}

<div class="row">
    <div class="col-sm-6 mx-auto shadow border-1 rounded border p-5">
        <div class="card-header mt-0 py-3">
            <div class="row">
                <div class=" text-center">
                    <h2><b>SIALA LOG IN.</b></h2>
                </div>
          
            </div>
        </div>
       
        <div class="card-body pt-4 col-12">
            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="StudentNumber" class="form-control" autocomplete="on" aria-required="true" placeholder="name@example.com" style="border-radius:10px;" />
                    <label asp-for="StudentNumber" class="form-label">Username</label>
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control"  aria-required="true" placeholder="password" style="border-radius:10px;" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="pb-4">
                    <button id="login-submit" type="submit" class="w-50 offset-sm-3  btn btn-lg btn-success " style="border-radius:10px;">Log in</button>
                </div>
               
            </form>
            <div class="pb-4">
                <a class="" asp-area="" asp-controller="Home" asp-action="ForgotPassword">
                    <button class="w-50 offset-sm-3  btn btn-lg btn-info " style="border-radius:10px;"><i class="bi bi-chevron-double-right"></i>Forgot Password?</button>
                </a>
            </div>
            </<div>
    </div>

</div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
